<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <include
        android:id="@+id/set_layout_icon"
        layout="@layout/layout_set_icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <include
            android:id="@+id/set_layout_name"
            layout="@layout/layout_set_normal" />

        <include
            android:id="@+id/set_layout_account"
            layout="@layout/layout_set_normal" />

        <include
            android:id="@+id/set_layout_phone"
            layout="@layout/layout_set_normal" />

        <include
            android:id="@+id/set_layout_sex"
            layout="@layout/layout_set_normal" />

        <include
            android:id="@+id/set_layout_area"
            layout="@layout/layout_set_normal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <include
            android:id="@+id/set_layout_version"
            layout="@layout/layout_set_normal" />

        <include
            android:id="@+id/set_layout_cache"
            layout="@layout/layout_set_cache" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:padding="16dp">

        <Button
            android:id="@+id/out_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_divider_bg_select"
            android:text="退出登录"
            android:textColor="@color/divider_font_mid" />

    </RelativeLayout>

</LinearLayout>
</ScrollView>
