<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#90000000"
    android:orientation="vertical">

    <TextView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:text="服务IP设置"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/bg_gray"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="语音服务:"
            android:textSize="16sp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/set_voice_ip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="请输入语音服务地址"
            android:paddingLeft="16dp"
            android:textColor="@color/divider_font_mid"
            android:textColorHint="@color/divider_font_tint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="视频通话:"
            android:textSize="16sp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/set_linphone_ip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="请输入视频通话地址"
            android:paddingLeft="16dp"
            android:textColor="@color/divider_font_mid"
            android:textColorHint="@color/divider_font_tint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="直播服务:"
            android:textSize="16sp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/set_video_ip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="请输入视频直播地址"
            android:paddingLeft="16dp"
            android:textColor="@color/divider_font_mid"
            android:textColorHint="@color/divider_font_tint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/ipset_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/bg_gray" />


        <View
            android:background="@color/tab_line"
            android:layout_width="1dip"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/ipset_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/bg_gray"
            android:text="Cancel"
            android:gravity="center"
            android:layout_weight="1.0"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/id_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="*例：192.168.107.112"
        android:textColor="@color/divider_font_red"
        android:textSize="10sp" />

</LinearLayout>
