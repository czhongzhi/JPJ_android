<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/bg_title_1">

    <ImageView
        android:id="@+id/bar_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/test_back" />

    <TextView
        android:id="@+id/bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_title"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="用户名" />

    <TextView
        android:id="@+id/bar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/divider_font_mid"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="取消" />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/divider_font_tint"
        android:layout_height="0.5dp" />

</RelativeLayout>
