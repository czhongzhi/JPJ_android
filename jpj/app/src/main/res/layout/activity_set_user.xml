<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg">

        <EditText
            android:id="@+id/set_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_divider_bg"
            android:gravity="center_vertical"
            android:hint="请输入修改内容"
            android:paddingLeft="16dp"
            android:textColor="@color/divider_font_mid"
            android:textColorHint="@color/divider_font_tint" />

        <Button
            android:id="@+id/set_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/set_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_divider_bg_select"
            android:text="确认"
            android:textColor="@color/divider_font_mid" />


    </RelativeLayout>
</LinearLayout>